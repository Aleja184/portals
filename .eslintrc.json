{
	"extends": "wikimedia",
	"env": {
		"browser": true,
		"jquery": true,
		"qunit": true,
		"node": true
	},
	"globals": {
		"mw": true,
		"mediaWiki": false,
		"Promise": true
	},
	"rules": {
		"no-sequences": "error",
		"vars-on-top": 1,
		"one-var": 1,
		"dot-notation": [ "error", { "allowKeywords": true } ]
	}
}
